      ENTERPRISE_ACTION_EXTENSION_PROFILE: "Adhoc ownCloud iOS App Action Extension",
      ENTERPRISE_APP_FW_ID: "com.owncloud.ownCloudApp",
      ENTERPRISE_TEAM: "4AP2STM4H5",
